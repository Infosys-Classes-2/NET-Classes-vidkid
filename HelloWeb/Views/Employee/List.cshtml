@model List<Employee>

@{
    ViewData["Title"] = "Employee List";
}


<a asp-controller="Employee" asp-action="Add" class="btn btn-primary mt-2">Add Employee</a>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Designation</th>
        <th>Level</th>
        <th>Department</th>
        <th>Join Date</th>
        <th></th>
    </tr>
    @foreach (Employee employee in Model)
    {
        <tr>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>@employee.Designation</td>
            <td>@employee.Level</td>    
            <td>@employee.Department.Name</td>
            <td>@employee.JoinDate</td>
            <td>
                <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>

            </td>
        </tr>
    }
</table>